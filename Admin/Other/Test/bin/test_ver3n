#!/bin/sh

check_err() {
	error_code="$?"
	[ "$error_code" -ne 0 ] && printf "Error of %d" "$error_code"
}

check_ver() {
	if [ "$(ver3n "$*")" ]; then
		version_info="âœ… $(ver3n "$*")"
	else
		version_info="ðŸŸ¥ not installed"
	fi
	printf "$*	%s\n" "$version_info"
}

echo "
#>######################################<#
################| Primary |###############
#>######################################<#

$(check_ver python)
$(check_ver nvim)
$(check_ver vim)
$(check_ver weHave)
$(check_ver rust)
$(check_ver cargo)

#>######################################<#
############| Error Handling |############
#>######################################<#

#@ No Options or Parameters

$(
	ver3n
	check_err
)

"
