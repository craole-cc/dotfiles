#     --src "$starship_theme" \
#     --lnk "$starship_toml"
# else
#   symbiolink \
#     --src "$starship_theme" \
#     --lnk "$starship_toml"
# fi
symbiolink \
  --src "$theme_src" \
  --lnk "$theme_lnk"
