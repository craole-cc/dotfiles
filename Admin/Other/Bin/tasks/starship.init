#!/bin/sh

: <<THEMES
  bracketed-segments
  craole
  nerd-font-symbols
  no-nerd-font
  pastel-powerline
  tokyo-night
THEMES

theme="bracketed-segments"
theme_src="$DOTS_CLI/starship/themes/${theme}.toml"
theme_lnk="$DOTS_CLI/starship/config.toml"

cmp -s "$theme_src" "$theme_lnk" ||
  symbiolink --force \
    --src "$theme_src" \
    --lnk "$theme_lnk"

# if [ -f "$STARSHIP_CONFIG" ]; then
