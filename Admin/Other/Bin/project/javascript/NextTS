#!/bin/sh


#* Add to JavaScript Projects *#
	mcd "$*"

	#* Create NextJS App with Typescript *#
	yarn create next-app --typescript .

	#* Initialize Yarn *#
	yarn init -2

	#* Add Modules *#
	yarn add next
	yarn add react
	yarn add react-dom
	yarn add --dev @types/node
	yarn add --dev @types/react
	yarn add --dev eslint
	yarn add --dev eslint-config-next
	yarn add --dev typescript
	yarn dlx @yarnpkg/sdks vscode
	yarn plugin import typescript

	#* Enable Debug Scripts *#
	ex package.json <<EOF
4 insert
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
.
xit
EOF

	#* Load Templates *#

	rm \
		--recursive --force \
		components/ \
		pages/ \
		styles/ \
		test/

	templates="$prJS/templates/NEXTts"
	cp \
		--archive \
		"$templates/." \
		.

	#* Develop in VSCode *#
	code .
	yarn dev