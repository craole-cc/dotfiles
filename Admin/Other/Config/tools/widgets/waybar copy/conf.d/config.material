        "on-click": "ctl-backlight.waybar.sh down"
    },
    "backlight#value": {
        // "device": "acpi_video1",
        "format": "{percent}",
        "on-click": "ctl-backlight.waybar.sh up"
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
