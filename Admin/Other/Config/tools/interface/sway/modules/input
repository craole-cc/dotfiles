# Any keyboard
input type:keyboard {
    xkb_layout us
	xkb_options caps:swapescape
}

# Any touchpad
input type:touchpad {
	dwt enabled
	tap enabled
	natural_scroll enabled
	middle_emulation enabled
	accel_profile "adaptive"
	# pointer_accel 0.95
	scroll_factor 1.2
}