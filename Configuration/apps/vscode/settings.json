{
  //> ===================================
  //> EDITOR CORE SETTINGS
  //> ===================================
  "editor.cursorBlinking": "expand",
  "editor.fontSize": 18,
  "editor.fontWeight": "500",
  "editor.letterSpacing": 1.2,
  "editor.lineHeight": 1.7,
  "editor.fontFamily": "'Operator Mono Lig','JetBrainsMono Nerd Font','FantasqueSansMono NF','Cascadia Code','Cascadia Code PL','monospace',monospace",
  "editor.fontLigatures": true,
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.mouseWheelZoom": true,
  "editor.accessibilitySupport": "off",
  //> ===================================
  //> EDITOR FEATURES
  //> ===================================
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": "active",
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.linkedEditing": true,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.semanticHighlighting.enabled": true,
  "editor.inlineSuggest.suppressSuggestions": true,
  //> ===================================
  //> MINIMAP AND LINE INDICATORS
  //> ===================================
  "editor.minimap.enabled": true,
  "editor.minimap.size": "fill",
  "LWI.style.fontStyle": "italic",
  "LWI.style.fontWeight": "100",
  "LWI.breakpoints": [
    {
      "color": "rgb(0, 255, 0, 0.6)",
      "column": 54
    },
    {
      "color": "rgb(255, 255, 0, 0.6)",
      "column": 69
    },
    {
      "color": "rgb(255, 0, 0, 0.6)",
      "column": 79
    }
  ],
  //> ===================================
  //> WORKBENCH & UI
  //> ===================================
  "window.autoDetectColorScheme": true,
  "window.menuBarVisibility": "toggle",
  "window.titleBarStyle": "custom",
  "workbench.startupEditor": "none",
  "workbench.panel.defaultLocation": "bottom",
  "workbench.commandPalette.preserveInput": true,
  "workbench.quickOpen.preserveInput": true,
  "workbench.settings.openDefaultKeybindings": true,
  "workbench.editor.revealIfOpen": true,
  "workbench.editorAssociations": {
    "*.pdf": "latex-workshop-pdf-hook"
  },
  //> ===================================
  //> THEME & VISUAL CUSTOMIZATION
  //> ===================================
  "glassit.alpha": 245,
  "glassit.step": 5,
  "glassit.force_sway": false,
  "workbench.preferredDarkColorTheme": "Bearded Theme feat. Melle Julie",
  "workbench.preferredLightColorTheme": "Bearded Theme Coffee Cream",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {},
  "editor.tokenColorCustomizations": {
    "textMateRules": []
  },
  //> ===================================
  //> MATERIAL ICON THEME
  //> ===================================
  "material-icon-theme.hidesExplorerArrows": true,
  "material-icon-theme.activeIconPack": "react",
  "material-icon-theme.folders.color": "#81c8be",
  "material-icon-theme.files.color": "#e8ddd8",
  "material-icon-theme.files.associations": {
    ".dotsrc": "dll",
    ".envrc": "robot",
    ".ignore": "mocha",
    ".shellcheckrc": "astyle",
    "rust-toolchain": "rust",
    "rust-toolchain.toml": "rust"
  },
  "material-icon-theme.folders.associations": {
    "users": "admin",
    "overlays": "plugin",
    "hosts": "client",
    "systems": "client",
    "day-*": "job",
    "days": "job",
    "macros": "Hooks",
    "crates": "Packages",
    "challenges": "Cluster",
    "Advent-of-Code": "Middleware",
    "nixos": "config",
    "media": "video",
    "rust": "Debug",
    "rails": "Debug",
    "types": "Enum",
    "methods": "Config",
    "traits": "Tools",
    "dots": "Cluster",
    ".cargo": "config",
    "benches": "debug"
  },
  //> ===================================
  //> TERMINAL CONFIGURATION
  //> ===================================
  "terminal.integrated.allowMnemonics": true,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.enableImages": true,
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font','Cascadia Code','Cascadia Code PL','Operator Mono Lig','monospace',monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "bold",
  "terminal.integrated.hideOnStartup": "whenEmpty",
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.mouseWheelZoom": false,
  "terminal.integrated.letterSpacing": 1.5,
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.rightClickBehavior": "copyPaste",
  "terminal.external.linuxExec": "warp-terminal",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "NixOS (WSL)": {
      "path": "C:\\WINDOWS\\System32\\wsl.exe",
      "args": [
        "-d",
        "NixOS"
      ]
    }
  },
  //> ===================================
  //> FILE HANDLING
  //> ===================================
  "files.autoSave": "afterDelay",
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "files.associations": {
    ".env*": "dotenv",
    "Gemfile": "ruby",
    "*.erb": "ruby",
    "*.css": "tailwindcss",
    "*.gs": "javascript"
  },
  "files.exclude": {
    ".Trash-1000": true,
    "**/.classpath": true,
    "**/.factorypath": true,
    "**/.git": false,
    "**/.idea": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.trunk/*actions/": true,
    "**/.trunk/*logs/": true,
    "**/.trunk/*notifications/": true,
    "**/.trunk/*out/": true,
    "**/.trunk/*plugins/": true,
    "$RECYCLE.BIN": true,
    "System Volume Information": true
  },
  "files.watcherExclude": {
    "**/.local/* *": true,
    "**/.vscode-server-insiders/* *": true,
    "**/* cache/* *": true,
    "**/.trunk/*actions/": true,
    "**/.trunk/*logs/": true,
    "**/.trunk/*notifications/": true,
    "**/.trunk/*out/": true,
    "**/.trunk/*plugins/": true
  },
  //> ===================================
  //> GIT CONFIGURATION
  //> ===================================
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.allowForcePush": true,
  "git.rebaseWhenSync": true,
  "git.confirmForcePush": false,
  "git.ignoreRebaseWarning": true,
