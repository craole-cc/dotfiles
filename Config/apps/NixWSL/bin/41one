#!/bin/sh

#@ Check if the 'verbose' variable is set to 'true'
if [ "$verbose" != "true" ]; then
  echo "Exiting: 'verbose' is not set to true."
  exit 1
fi

main() {
  if [ -f "$1" ]; then
    if type bat >/dev/null 2>&1; then
      bat "$1"
    else
      cat "$1"
    fi
  else
    printf "%s\n" "$@"
  fi
} && main "$@"
