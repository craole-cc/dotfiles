# Get the directory of the currently running script
BDOTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Print the directory path
# echo "The directory of the running script is: $current_script_dir"

# find "$BDOTDIR/resources" -type f -name "*.bash" -exec bash {} \;
# find "$BDOTDIR/functions" -type f -exec bash {} \;

BASH_FUNCTIONS="$BDOTDIR/functions"
BASH_RESOURCES="$BDOTDIR/resources"

for resource in "${BASH_RESOURCES}"/*.*; do
  if [ -r "$resource" ]; then
    . "$resource"
  fi
done

for function in "${BASH_FUNCTIONS}"/*.*; do
  if [ -r "$function" ]; then
    . "$function"
  fi
done

# unset resource function
