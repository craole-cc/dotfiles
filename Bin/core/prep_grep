#!/bin/sh

__args__() {
    #| Core
    case "$1" in
    -h | --help)
        __help__
        exit
        ;;
    -v | --version)
        printf "%s\n" "version"
        exit 0
        ;;
    -d | --verbose)
        VERBOSE_=1
        shift
        ;;
    -q | --quiet)
        VERBOSE_=''
        shift
        ;;
    --list-file)
        ignore_file="$2"
        shift 2
        ;;
    *) ;;
    esac

    #| Process
    while [ "$#" -ge 1 ]; do
        case "$1" in
        -l | --list) #| Expects a file/directory
            arg_type="LIST"
            shift
            ;;
        -*)
            echo "Invalid option: $1"
            __help__
            break
            ;;
        *) ;;
        esac

        # __sources__ "$1"
        # __test__ "$1"
        __process__ "$1"

        shift
    done
}

__process__() {
    case $1 in
    --list)
        list="$(printf "%s" "$2" | tr '[:space:]' '|' | sed '$s/|$/\n/')"
        ;;
    esac
}

