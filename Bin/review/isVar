#!/bin/sh

#> srcENV                                                                    <#
#DOC => Determines the status of environment variables

#| Version
_VERSION="1.0"

#| Accept options

case "$1" in
-h | --help)
  _HELP=true
  shift
  ;;
-v | --version)
  _VERSION=true
  shift
  ;;
-V | --verbose)
  _VERBOSE=true
  shift
  ;;
*) ;;
esac
