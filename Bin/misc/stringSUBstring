#!/bin/sh

# contains(string, substring)
#
# Returns 0 if the specified string contains the specified substring,
# otherwise returns 1.

__main__() {
    STRING="$1"
    SUBSTRING="$2"
    CHECK="$(
        echo "$STRING" |
            grep --color='always' "$SUBSTRING"
    )"

    # # Test
    # echo "1 $1"
    # echo "2 $2"
    # echo "3 $3"
    # echo "4 $4"

    [ ! "$_VERBOSE" ] &&
        [ ! "$_ignoreCASE" ] && [ "$CHECK" ] &&
        return 0

    if [ "$_VERBOSE" ]; then
        if [ "$CHECK" ]; then
            printf "%s\n\"$SUBSTRING\" is in\n\"$CHECK\"\n"
        else
            printf "%s\n\"$SUBSTRING\" not in \n\"$STRING\"\n"
            return 1 # $substring is not in $string
        fi
    fi
}

case $1 in
-i | --case)
    shift
    _ignoreCASE=true
    ;;
-v | --verbose)
    shift
    _VERBOSE=true
    ;;
-c | --check | *) ;;
esac

__main__ "$@"
