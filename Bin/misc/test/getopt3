#!/bin/sh

__usage__() {
printf "\nUSAGE: getopt3 <[options]>"
printf "\n--------------------------"
printf "\n      -h | --help"
printf "\n      -r | --row"
printf "\n      -c | --col"
}

options=$(getopt -l \
    "help,row:,col:" -o "hrc" -a -- "$@")

eval set -- "$options"
args="$*"
while true; do
    case $1 in
    -r | --row)
        shift
        echo "row:: ${args#--*}"
        ;;
    -c | --col) echo "col:: $*" ;;
    --)
        shift
        break
        ;;
    -h | --help)
        __usage__
        exit 0
        ;;
    *)
        echo "Internal error!"
        exit 1
        ;;
    esac
    shift
done
