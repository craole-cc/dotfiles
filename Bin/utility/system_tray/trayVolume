#!/bin/sh

#@ Declare command information
if weHave --check volumeicon; then
  _APP="volumeicon"
elif weHave --check pa-applet;then
  _APP="pa-applet"
  _ARGS="--disable-key-grabbing"
else
exit 1
fi

#@ Kill all active instances of the app
murda "$_APP"

#@ Launch with or without arguments
if [ "$_ARGS" ]; then
  eval "$_APP" "$_ARGS" &
else
  eval "$_APP" &
fi
