#!/bin/sh

if type hyperfine >/dev/null 2>&1; then
  hyperfine \
    --ignore-failure \
    --warmup 50 \
    --min-runs 200 \
    "$@" 2>/dev/null
else
  counter=0
  while [ $# -gt 0 ]; do
    counter=$((counter + 1))
    printf "Benchmark %s: %s\n" "$counter" "$1"
    time sh -c "$1"
    printf "\n"
    shift
  done
fi
