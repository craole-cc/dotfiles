#!/bin/sh

__usage__() {
    cat <<End-of-message
-------------------------------------
read_char [timer]
-h | --help => Usage
-t | --timer => Timer <n>

:: Example ::
PROMPT="Should we blah blah blah? [y|N]"
printf "%s => " "$PROMPT"

case "$(read_char -t 15)" in
[Yy]) echo YES ;;
*) echo NO ;;
esac
-------------------------------------
End-of-message
}

__char__() {
    _c=$(stty -g)

    if [ "$_time" ]; then
        stty raw -echo min 0 time "$_time"
    else
        stty raw -echo
    fi

    dd count=1 2>/dev/null
    stty "$_c"

}

case $1 in
-h | --help) __usage__ ;;
-t | --timer)
    [ -n "$2" ] && _time="$2"
    shift 2
    _timer=true
    ;;
*) ;;
esac

__char__
