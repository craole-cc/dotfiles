#!/bin/sh
# shellcheck disable=SC2034,SC1090,SC2154,SC1091

appName="sshIt"
appVersion="0.10"

case "$1" in
-h | --help)
  _HELP=true
  ;;
-v | --version)
  _VER=true
  ;;
-e | --src | --env)
  _SRC=true
  shift
  _ENV="$*"
  ;;
*) ;;
esac

__help__() {
  echo "$appName"
}

__version__() {
  echo "$appVersion"
}

main() {
  [ $_HELP ] && __help__
  [ $_VER ] && __version__
  __variables__
  __init__
}

__error__() {
  args=$(echo "$1" | tr '[:upper:]' '[:lower:]')
  case "$args" in
  --required)
    echo "ðŸš© This is ${error}required${reset}
    "
    exit 1
    ;;
  --naked)
    echo "ðŸš© Invalid character(s): ${error}$_invalid${reset}
    "
    exit 1
    ;;
  --character)
    echo "ðŸš© Invalid characters were removed:
    ðŸŸ¥ $_invalid
    âœ… $_valid
    "
    ;;
  --selection)
    echo "ðŸš© Invalid Selection
    "
    ;;
  --env)
    shift
    echo "ðŸš© The ${error}ENV file${reset} path is invalid: \"$_ENV\""
    __ui__ --file
    ;;
  --id_exists)
    shift
    echo "
ðŸš© This ${error}identity file${reset} already exists:
\"$*\"
"
    __ui__ --id_exists
    ;;
  --file)
    shift
    printf "%s
ðŸš© Invalid File:
\"$*\""
    __ui__ --file
    ;;
  --path)
    shift
    echo "
ðŸš© Invalid Path:
\"$*\""
    __ui__ --path
    ;;
  esac
}

#@ User Input                                                                 #
__ui__() {

  #| Disable user input display
  # stty -echo

  opts=$(echo "$*" | tr '[:upper:]' '[:lower:]')
  case "$opts" in
  --host)
    echo "${italic}Who is the ${success}host${reset}?"
    read -r _INPUT
    __valid_name__ "$_INPUT"
    sshHost="$_valid"
    ;;
  --user)
    echo "${italic}Who is the ${info}user${reset}?"
    read -r _INPUT
    __valid_name__ "$_INPUT"
    sshName="$_valid"
    ;;
  --hostname)
    echo "${italic}What is the ${info}hostname${reset}? "
    read -r _INPUT
    __valid_name__ "$_INPUT"
    sshHostName="$_valid"
    ;;
  --id_new)
    echo "${italic}Where should the ${info}Identity File${reset} be saved?"
    read -r _INPUT
    __valid_id__ "$_INPUT"
    __valid_pathname__ "$_INPUT"
    sshID="$_valid"

    ;;
  --id_default)
    echo "${italic}Save the ${info}Identity File${reset} to the default location? [Y|n]
    ${defaultID}"
    read -r OPT
    case $OPT in
    n* | N*)
      __ui__ --id_new
      ;;
    y* | Y* | *)
      _INPUT="${defaultID}"
      ;;
    esac
    ;;
  --id_exists)
    echo "${italic}Overwrite the current ${bold}identity${reset} file [${bold}N${reset}|y]? "
    read -r OPT
    case $OPT in
    y* | Y*)
      _RESET=true
      echo "Existing identity file archived"
      ;;
    n* | N*)
      __ui__ --id_new
      ;;
    *)
      __error__ --selection
      __ui__ --id_exists
      ;;
    esac
    ;;
  --env)
    echo "${italic}What is the path to the ${info}ENV${reset} file?"
    read -r _INPUT
    __valid_env__ "$_INPUT"
    ;;
  --file)
    echo "${italic}Please enter a valid path to the ${bold}file${reset}."
    read -r _INPUT
    __valid_file__ "$_INPUT"
    ;;
  --path)
    echo "${italic}Please enter a valid ${bold}path${reset}."
    read -r _INPUT
    __valid_pathname__ "$_INPUT"
    ;;
  --confirm)
    #| Print content before the ID
    printf "%s
        Continue with this SSH config? [Y|n]?
  |> ---------------------------------------- <|
              Host | $sshHost
          Hostname | $sshHostName
              User | $sshName\n"

    #| Wrap if ID length exceeds 22 characters"
    ID_len="${#sshID}"
    if [ "$ID_len" -gt 22 ]; then
      printf "%-15s ID | â¤µ \n %-5s $sshID \n"
    else
      printf "%-15s ID | $sshID \n"
    fi

    read -r OPT
    case $OPT in
    n* | N*)
      __ui__ --change
      ;;
    y* | Y* | *)
      return
      ;;
      # *)
      #   __error__ --selection
      #   __ui__ --confirm
      # ;;
    esac
    ;;
  --change)
    printf "
              Select Change Option
  |> ---------------------------------------- <|
                1. ENV Key File
                2. Host
                3. HostName
                4. User
                5. Identity File
                6. Cancel
  "
    read -r n
    case $n in
    1) __ui__ --env ;;
    2) __ui__ --host ;;
    3) __ui__ --hostname ;;
    4) __ui__ --user ;;
    5) __ui__ --id_new ;;
    6)
      echo "Exiting $appName"
      exit
      ;;
    *) __error__ --selection ;;
    esac
    __ui__ --confirm
    ;;
  esac

  #| Enable user input display
  stty echo

}

#@ Variables                                                                  #
__variables__() {

  #*** UserID ***#
  if [ -z "$userID" ]; then
    [ -n "${USER+x}" ] && user="$USER"
    [ -n "${USERNAME+x}" ] && user="$USERNAME"
    userID="$(hostname)_$user"
  fi

  #*** SSH Variables ***#
  _ssh_() {
    #*** Config ***#
    sshDIR="$HOME/.ssh"
    rcSSH="$sshDIR/config"

    #*** Host ***#
    _host_() {
      _key="$Host"
      if [ -n "$_key" ]; then
        sshHost="$_key"
        __valid_name__ "$sshHost"
        sshHost="$_valid"
      else
        __ui__ --host
        # sshHost="$_INPUT"
      fi
    }

    #*** User ***#
    _user_() {
      _key="$Name"
      if [ -n "$_key" ]; then
        sshName="$_key"
        unset _key
      else
        __ui__ --user
        sshName="$_INPUT"
      fi
      __valid_name__ "$sshName"
      sshName="$_valid"
    }

    #*** Hostname ***#
    _hostname_() {
      _key="$HostName"
      if [ -n "$_key" ]; then
        sshHostName="$_key"
        unset _key
      else
        __ui__ --hostname
        sshHostName="$_INPUT"
      fi
      __valid_name__ "$sshHostName"
      sshHostName="$_valid"
    }

    #*** Identity File ***#
    _id_() {
      #| Set path
      _key="$ID"
      if [ -n "$_key" ]; then
        sshID="$_key"
        unset _key
      else
        defaultID="${sshDIR}/${sshHostName}/${sshName}"
        sshID="${defaultID}"
      fi

      #| Check if path exists
      __valid_id__ "$sshID"

      #| Extract path variables
      sshIDdir=$(dirname "$sshID")
      sshIDname="$(basename "$sshID")"

      #| Allow reinitialization
      if [ "$_RESET" ]; then

        #| Declare files to archive
        FILEStoArchive="$(
          find "${sshIDdir}" \
            -maxdepth 1 \
            -type f -name "${sshName}" -o \
            -type f -name "${sshName}.*"
        )"

        #| Archive exixting files
        [ -f "$sshID" ] &&
          for file in $FILEStoArchive; do
            bakDIR="${sshIDdir}/archive"
            mkdir --parents "$bakDIR"
            mv "$file" \
              --backup=numbered \
              --target-directory="$bakDIR"
          done
      fi
    }

    #*** Confirm Variables ***#
    _host_ && _user_ && _hostname_ && _id_
    __ui__ --confirm
  }

  #*** Environment Key File ***#
  if [ "$_SRC" ]; then

    for file in $_ENV; do
      #| Ensure the ENV file is found.
      __valid_env__ "$file"

      #| Unset ENV Variables
      unset Host HostName Name Email

      #| Source the ENV file
      . "$file"

      #| Load SSH Variables
      _ssh_
    done
  else
    #| Load SSH Variables
    _ssh_
  fi
}

#@ SSH Initializer                                                            #
__init__() {

  #| Create a directory for the host, if necessary.
  [ -d "${sshIDdir}" ] || mkdir --parents "${sshIDdir}"

  #| Generate public/private algorithm key pair, respectively.
  ssh-keygen -t ed25519 -a 100 -f "${sshID}" -C "${sys_LABEL}"
  ssh-keygen -y -f "${sshID}" >"${sshID}.pub"

  #| Start the ssh-agent and add the private key to it.
  eval "$(ssh-agent)" && ssh-add "${sshID}"

  #| Update the ssh config file
  tee -a "${sshDIR}/config" <<EOF

Host $sshHost
  User $sshName
  HostName $sshHostName
  IdentityFile $sshID

EOF

  #| Send the contents of the public key to the clipboard
  clip-c "$(cat "$sshID.pub")"
}

#@ Utilities                                                                  #
#| Validation
__valid_chars__() {
  _invalid="$(echo "$*" | highlight_text "$_validchars")"
  _valid="$(echo "$*" | extract_text "$_validchars")"

  [ -z "$*" ] && __error__ --required
  [ "$_valid" = "" ] && __error__ --naked
  [ "$*" != "$_valid" ] && __error__ --character

}

__valid_name__() {
  _validchars="[^A-Za-z0-9._-]"
  __valid_chars__ "$@"
}

__valid_pathname__() {
  _validchars="[^A-Za-z0-9\/._-]"
  __valid_chars__ "$@"
}

#| Existing File Check
__valid_env__() { [ -f "$*" ] || __error__ --env "$*"; }
__valid_id__() { [ -f "$*" ] && __error__ --id_exists "$*"; }
__valid_file__() { [ -f "$*" ] || __error__ --file "$*"; }
__valid_dir__() { [ -d "$*" ] || __error__ --path "$*"; }

#| Terminal Characteristics
# . TERM_by_TPUT
use_TPUT
# . sysINF
highlight_text() { grep --color=always "$@"; }
extract_text() { sed "s!$*!!g"; }
# mkfile() { install -m 644 -D /dev/null "$@"; }

#| Run the script
main

