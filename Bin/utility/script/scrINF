#!/bin/sh

script="$1"

get_path() { pathof "$script"; }
get_directory() {
  directory="$(
    dirname "$script"
    echo x
  )"
  directory=${directory%??}
  printf "%s" "$directory"
}
get_name() { basename "$(get_path)"; }
display_info() {
  case "$1" in
  printf "%s: %s\n" "$1" "$2"; }

display_info name "$(get_name)"
display_info path "$(get_path)"
display_info  dir "$(get_directory)"


