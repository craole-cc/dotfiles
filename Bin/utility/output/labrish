#!/bin/sh

#/> Utilities                                       <\
# blank_line() { printf "\n"; }
# [ "$preline" ] && blank_line
# printf "%s" "$1"
# [ "$newline" ] && blank_line

#@ Default
line_break=true

for arg in "$@"; do
  case "$arg" in
  -n | --noline)
    shift
    unset line_break
    ;;
  esac

  if [ "$line_break" ]; then
    printf "%s\n" "$arg"
  else
    printf "%s" "$arg"
  fi
done
