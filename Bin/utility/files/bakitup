#         ;;
#       link)
#         backup_opt="--link"
#         ;;
#       symlink)
#         backup_opt="--symbolic-link"
#         ;;
#       *)
#         if [ "$2" ]; then
#           pout \
#             --lbl "Invalid Backup Option" \
#             --var "$2" \
#             --msg "Reverting to normal backup" \
#             --usg "$func_usage"
#         else
#           pout \
#             --lbl "Missing Backup Option" \
#             --msg "Reverting to normal backup" \
#             --usg "$func_usage"
#         fi
#         return
#         ;;
#       esac
#       shift
#       ;;
#     --source)
