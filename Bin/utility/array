#!/bin/sh

case $1 in
--find)
  shift
  FIND=true
  ;;
--save)
  shift
  ;;
esac

__save__() {
  for i; do printf %s\\n "$i" | sed "s/'/'\\\\''/g;1s/^/'/;\$s/\$/' \\\\/"; done
  echo " "
}

__find__() {
  find "$@" -exec sh -c "for i do printf %s\\\\n \"\$i\" \\
| sed \"s/'/'\\\\\\\\''/g;1s/^/'/;\\\$s/\\\$/' \\\\\\\\/\"
done" dummy '{}' +
}

if [ "$FIND" ]; then
  __find__ "$@"
else
  __save__ "$@"
fi

    # set -- "$CMD" "$OPT"
    # CMD_OPTS=$(__save__ "$@")
    # eval "set -- $CMD_OPTS"
    # "$@" >/dev/null 2>&1 &