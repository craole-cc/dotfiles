#!/bin/sh

__instances__() {
  pgrep --count "$@"
}

__valid__() {
  [ "$(__instances__ "$@")" -eq 0 ]
}

__msg_active__() {
  INSTANCES=$(__instances__ "$@")
  if [ "$INSTANCES" -gt 1 ]; then
    printf \
      "\`%s\` has %s active instances.\n" \
      "$@" \
      "$INSTANCES"
  else
    printf "\`%s\` is active.\n" "$@"
  fi
  return 0
}

__msg_inactive__() {
  printf "\`%s\` is inactive.\n" "$@"
  return 1
}

__msg_missing__() {
  printf "\`%s\` is not installed.\n" "$@"
  return 1
}

__run__() {
  # if [ "$(app_is_active "$@")" ]; then
  #   app_is_active "$@"
  # else
  #   "$@" >/dev/null 2>&1 &
  #   printf "ðŸš€ %s\n" "$@"
  # fi
    # app_is_active "$@"
    # echo "$?"
    "$@"
}

for app in "$@"; do
  __run__ "$app"
  # echo $?
done

# TODO: Add options including "verbose"
# printf "The PID for %s is: %s\n" "$__app__" "$PID"

unset app
