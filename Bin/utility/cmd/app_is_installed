#!/bin/sh

__valid__() {
  unalias "$@" >/dev/null 2>&1
  command -v "$@" >/dev/null 2>&1
}

__msg_true__() {
  info=$(type "$@")
  printf "✅ %s\n" "$info"
}

__msg_false__() {
  printf "❌ %s is not installed\n" "$@"
  return 1
}

__check__() {
  # if __valid__ "$@"; then
  #   __msg_true__ "$@"
  # else
  #   __msg_false__ "$@"
  # fi

  if ! __valid__ "$@"; then
    __msg_false__ "$@"
  fi

}

__run__() {
  __check__ "$@"
}

for APP_TO_CHECK in "$@"; do
  __run__ "$APP_TO_CHECK"
done

unset app
