#!/bin/sh

case $1 in
-d | --verbose)
  VERBOSE=true
  shift
  ;;
*) ;;
esac

__instances__() {
  pgrep --count "$@"
}

__valid__() {
  [ "$(__instances__ "$@")" -eq 0 ]
}

__msg_active__() {
  INSTANCES=$(__instances__ "$@")
  if [ "$INSTANCES" -gt 1 ]; then
    printf \
      "ℹ️  \`%s\` has %s active instances.\n" \
      "$@" \
      "$INSTANCES"
  else
    printf "ℹ️  \`%s\` is active.\n" "$@"
  fi
  return 0
}

__msg_inactive__() {
  printf "ℹ️  \`%s\` is inactive.\n" "$@"
  return 1
}

__msg_missing__() {
  printf "ℹ️  \`%s\` is not installed.\n" "$@"
  return 1
}

__msg__() {
  case $1 in
  --missing)
    printf "ℹ️  \`%s\` is not installed.\n" "$@"
    return 1
    ;;
  *) ;;
  esac
}

__run__() {
  [ "$(app_is_installed "$@")" ] || __msg__ --missing "$@"

  if __valid__ "$@"; then
    __msg_inactive__ "$@"
    exit 1
  else
    __msg_active__ "$@"
    exit 0
  fi

}

for app in "$@"; do
  __run__ "$app"
  # echo $?
done

# TODO: Add options including "verbose"
# printf "The PID for %s is: %s\n" "$__app__" "$PID"

unset app
