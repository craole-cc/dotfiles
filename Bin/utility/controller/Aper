#!/bin/sh

we_have() { #@ Check if the command exists
  type "$1" >/dev/null 2>&1
}

process_core() {
  # [ "$content" ]; || return 1
  case "$action" in
  -p | --paste) paste "$content" ;;
  *) copy "$content" ;;
  esac
  #     shift
  #     if we_have copyq; then
  #       launch copyq
  #       copyq copy $*
  #       paste() { copyq paste; }
  #     elif [ "$XDG_SESSION_TYPE" = "wayland" ] && we_have wl-clipboard; then
  #       copy() { wl-copy; }
  #       paste() { wl-paste; }
  #     fi
  #     ;;
  #   -p | --paste) ;;
  #   esac
}

copy_to_clipboard() {
  if [ "$XDG_SESSION_TYPE" = "wayland" ] && we_have wl-copy; then
    wl-copy "$*"
  # elif we_have copyq; then
  #   launch copyq
  #   # copyq disable
  #   copyq copy "$*"
  #   # copyq enable
  elif we_have clip.exe; then
    clip.exe "$*"
  elif we_have pbcopy; then
    pbcopy "$*"
  elif we_have xclip; then
    xclip -selection clip "$*"
  elif we_have vis-clipboard; then
    vis-clipboard --copy "$*"
  else
    /dev/clipboard "$*"
  fi
}

paste_from_clipboard() {
  if [ "$XDG_SESSION_TYPE" = "wayland" ] && we_have wl-copy; then
    wl-copy "$*"
  elif we_have copyq; then
    CMDman %start copyq
    copyq paste
  elif we_have clip.exe; then
    clip.exe "$*"
  elif we_have pbcopy; then
    pbcopy "$*"
  elif we_have xclip; then
    xclip -sel clip "$*"
  elif we_have vis-clipboard; then
    vis-clipboard --copy "$*"
  elif we_have powershell.exe; then
    powershell.exe Get-Clipboard "$*"
  else
    /dev/clipboard "$*"
  fi
}

parse_arguments() {
  while [ "$#" -ge 1 ]; do
    case "$1" in
    -c | --copy | -p | --paste)
      action="$1"
      shift
      content="$*"
      ;;
    *)
      # action="copy"
      content="$*"
      ;;
    esac
    shift
  done

}

parse_arguments "$@"

echo "OPTION: $action"
echo "CONTENT: $content"
