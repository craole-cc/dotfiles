#!/bin/sh
# http://www.etalabs.net/sh_tricks.html

fmt=%s end=\\n IFS=" "

while [ $# -gt 1 ]; do
    case "$1" in
    [!-]* | -*[!ne]*) break ;;
    *ne* | *en*) fmt=%b end= ;;
    *n*) end= ;;
    *e*) fmt=%b ;;
    esac
    shift
done

# shellcheck disable=SC2059
printf "$fmt$end" "$*"
