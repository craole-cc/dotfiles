#!/bin/sh

# ===================================================================
#@		                           	INFO			                       @#
# ===================================================================

__info__() {
  _cmd_PATH="$(pathof "$0")"
  _cmd_NAME="$(basename "$_cmd_PATH")"
  _cmd_HOME="$(dirname -- "$_cmd_PATH")"
  _cmd_APP="rofi"
  _cmd_VERSION="1.0"
  _cmd_DESCRIPTION="Theme (rofi) window switcher and application launcher"
  _cmd_DEPENDENCIES="rofi, weHave"
  _cmd_USAGEGUIDE="$(
    cat <<USAGE_GUIDE

#>----------------------------------------------------<#
            $_cmd_NAME <[options]> <[arguments]>
#>----------------------------------------------------<#
  $_cmd_DESCRIPTION
#>----------------------------------------------------<#
      -h --help       |>     Usage guide
      -v --version    |>     Version
      -d --verbose    |>     Details
      -r --rebuild    |>     Rebuild [default]
      -u --update     |>     Update
      -g --clean      |>     Clean
      -c --config     |>     Config
      -f --flake      |>     Flake
#>----------------------------------------------------<#

USAGE_GUIDE
  )"

  #@ Usage display
  __help__() { printf "%s\n" "$_cmd_USAGEGUIDE"; }

  #@ Version display
  __version__() { printf "%s\n" "$_cmd_VERSION"; }

  #@ App
  __init__() {

    #@ Ensure dependencies are met
    weHave "$_cmd_APP" || __error__ --app

    #@ Confirm active desktop environment
    { [ "${WAYLAND_DISPLAY}" ] || [ "${DISPLAY}" ]; } ||
      __error__ --protocol

    #@ Load context variables
    context="$DOTS_ENV_CTX/rofi"

    for file in $context; do
      if [ -f "$file" ]; then
        . "$file"
      else
        __error__ --context
      fi
    done
  }
}

# ===================================================================
#@		                          OPTIONS			                       @#
# ===================================================================

__opts__() {
  while [ "$#" -gt 0 ]; do
    case "$1" in
    -h | --help)
      __help__
      exit
      ;;
    -v | --version)
      __version__
      exit
      ;;
    -d | --verbose) verbose=true ;;
    -q | --quiet) unset verbose ;;
    -m | --menu) menu="$2" ;;
    -t | --type) type="$2" ;;
    -s | --style) style="$2" ;;
    -T | --theme) theme="$2" ;;
    *) ;;
    esac
    shift
  done
}

# ===================================================================
#@		                          DEFAULT			                       @#
# ===================================================================

__validate__() {
  #@ Set default parameters
  [ "$theme" ] || {
    [ "$menu" ] || menu=launcher
    [ "$type" ] || type=1
    [ "$style" ] || style=1
    ext=rasi
    theme="${ROFI_HOME}/${menu}/type-${type}/style-${style}.${ext}"
  }

  #@ Validation
  is_number "$type" || __error__ --type
  is_number "$style" || __error__ --style
  [ "${theme##*.}" = "$ext" ] || __error__ --ext
  [ -f "$theme" ] || __error__ --config
}

# ===================================================================
#@		                           	ERROR			                       @#
# ===================================================================

__error__() {
  case $* in
  --app) msg="'$_cmd_APP' not found in PATH" ;;
  --protocol) msg="Display not accessible" ;;
  --config) msg="Missing config file [$NIXOS_CONFIG]" ;;
  --context) msg="Missing context file [$NIXOS_CONFIG]" ;;
  --extension) msg="Missing the '$ext' ext
   CONFIG: $NIXOS_CONFIG" ;;
  --type) msg="Invalid type '$type'" ;;
  --style) msg="Invalid style '$style'" ;;
  *) ;;
  esac

  printf "\nðŸŸ¥ %s\n" "$msg"
  __help__
  exit 1
}

# ===================================================================
#@		                           	TEST			                       @#
# ===================================================================

__test__() {
  # echo "menu: $menu"
  # echo "type: $type"
  # echo "style: $style"
  echo "theme: $theme"
}

# ===================================================================
#@		                          PROCESS			                       @#
# ===================================================================

__process__() {
  rofi -show drun -theme "$theme"
}

# ===================================================================
#@		                          CLEANUP			                       @#
# ===================================================================

__cleanup__() {
  unset \
    menu \
    type \
    style \
    theme
}

# ===================================================================
#@		                            MAIN  		                       @#
# ===================================================================

__main__() {

  #@ Load app info
  __info__

  #@ Load internal variables
  __init__
  __opts__ "$@"
  __validate__

  #@ Run
  # __test__
  __process__

  #@ Exit
  __cleanup__
}

__main__ "$@"
